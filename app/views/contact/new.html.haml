  .col-md-5.jumbotron
    .row
      .span4
        =form_for @contact, url: contact_index_path, method: :post do | form |
          = render partial: 'shared/error_messages', locals: { object: @contact }
          .form-field.control-group
            =form.label "Your name", class: 'green'
            =form.text_field :name
            %br
            =form.label "Email address", class: 'green'
            =form.text_field :contact_email
            %br
            =form.label "Mobile number", class: 'green'
            =form.text_field :mobile
            %br
            =form.label "Your message", class: 'green'
            =form.text_area :message, rows: 5
            %br
            =form.submit "Send", class: 'btn-primary btn-danger pull-right', style:"width:50px;"
